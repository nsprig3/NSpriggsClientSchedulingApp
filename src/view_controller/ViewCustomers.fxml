<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view_controller.ViewCustomersController">
   <children>
      <VBox prefHeight="400.0" prefWidth="700.0">
         <children>
            <Pane prefHeight="400.0" prefWidth="700.0">
               <children>
                  <Label layoutX="30.0" layoutY="14.0" text="Customers" />
                  <TableView fx:id="viewCustomersTableView" layoutX="30.0" layoutY="89.0" prefHeight="200.0" prefWidth="656.0">
                    <columns>
                      <TableColumn fx:id="viewCustomersIDCol" prefWidth="76.0" text="Customer ID" />
                      <TableColumn fx:id="viewCustomersNameCol" prefWidth="113.0" text="Name" />
                        <TableColumn fx:id="viewCustomersAddressCol" prefWidth="176.0" text="Address" />
                        <TableColumn fx:id="viewCustomersPostalCodeCol" prefWidth="99.0" text="Postal Code" />
                        <TableColumn fx:id="viewCustomersPhoneCol" prefWidth="118.0" text="Phone" />
                        <TableColumn fx:id="viewCustomersDivisionCol" prefWidth="73.0" text="Division ID" />
                    </columns>
                  </TableView>
                  <Button fx:id="viewCustomersAddCustomerBtn" layoutX="60.0" layoutY="310.0" mnemonicParsing="false" onAction="#onActionAddCustomer" text="Add Customer" />
                  <Button fx:id="viewCustomersEditCustomersBtn" layoutX="165.0" layoutY="310.0" mnemonicParsing="false" onAction="#onActionUpdateCustomer" text="Edit Customer" />
                  <Button fx:id="viewCustomersDeleteCustomerBtn" layoutX="266.0" layoutY="310.0" mnemonicParsing="false" onAction="#onActionDeleteCustomer" text="Delete Customer" />
                  <Button fx:id="viewCustomersMainMenuButton" layoutX="590.0" layoutY="348.0" mnemonicParsing="false" onAction="#onActionDisplayMainMenu" text="Main Menu" />
                  <Button fx:id="viewCustomersViewAppointmentsBtn" layoutX="544.0" layoutY="310.0" mnemonicParsing="false" onAction="#onActionViewAppointments" text="View Appointments" />
               </children>
            </Pane>
         </children>
      </VBox>
   </children>
</AnchorPane>
